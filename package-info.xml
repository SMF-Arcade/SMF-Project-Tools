		<require-file name="Sources/Subs-ProjectAdmin.php" destination="$sourcedir" />
		<require-file name="Sources/Subs-ProjectMaintenance.php" destination="$sourcedir" />

		<!-- These files goest to Theme directory -->
		<require-file name="Themes/core/IssueList.template.php" destination="$themedir" />
		<require-file name="Themes/core/IssueReport.template.php" destination="$themedir" />
		<require-file name="Themes/core/IssueView.template.php" destination="$themedir" />
		<require-file name="Themes/core/ManageProjects.template.php" destination="$themedir" />
		<require-file name="Themes/core/PatchView.template.php" destination="$themedir" />
		<require-file name="Themes/core/Project.template.php" destination="$themedir" />
		<require-file name="Themes/core/ProjectAdmin.template.php" destination="$themedir" />
