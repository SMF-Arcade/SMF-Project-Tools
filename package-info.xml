		<require-file name="Themes/core/ProjectProfile.template.php" destination="$themedir" />
		<require-file name="Themes/core/ProjectRoadmap.template.php" destination="$themedir" />
		<require-file name="Themes/core/ProjectView.template.php" destination="$themedir" />

		<!-- CSS -->
		<require-file name="Themes/core/css/project.css" destination="$themedir/css" />

		<!-- Scripts -->
		<require-file name="Themes/default/scripts/project.js" destination="$themedir/scripts" />

		<!-- Images -->
		<require-file name="Themes/core/images/bug.png" destination="$imagesdir" />
		<require-file name="Themes/core/images/feature.png" destination="$imagesdir" />
		<require-file name="Themes/core/images/pdropdown.gif" destination="$imagesdir" />
		<require-file name="Themes/core/images/ploading.gif" destination="$imagesdir" />

		<!-- Langauges -->
		<require-file name="Themes/default/languages/Project.english.php" destination="$languagedir" />
		<require-file name="Themes/default/languages/ProjectAdmin.english.php" destination="$languagedir" />
		<require-file name="Themes/default/languages/ProjectEmail.english.php" destination="$languagedir" />
		
		<!-- Run Installer/upgrader -->
		<code>ptinstall/Database.php</code>
		<code>ptinstall/Subs-Install.php</code>
		<database>ptinstall/install_main.php</database>

		<modification format="xml" type="file">install.xml</modification>
		<modification format="xml" type="file">coretheme-default.xml</modification>

		<!-- Redirect to upgrader -->
		<redirect url="$scripturl?action=admin;area=projectsadmin;sa=maintenance;activity=upgrade" timeout="10"></redirect>
	</install>
	
