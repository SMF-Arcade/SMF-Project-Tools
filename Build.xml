<?xml version="1.0"?>
<builds>
	<build>
		<!-- Name for build -->
		<name>SMF Project Tools</name>
		<version>0.4.1</version>
		
		<!-- Allow SVN Builds? -->
		<allow-svn>1</allow-svn>
		
		<!-- STR version (remove this)? -->
		<version-str>0.4.1</version-str>
		
		<!-- Internal Version -->
		<version-int>0.4001</version-int>
		
		<!-- Package-info file to parse -->
		<package-info base="{BASEDIR}">{BASEDIR}/package-info.xml</package-info>
		
		<!-- More files to include -->
		<file-include source="{BASEDIR}">changelog.txt</file-include>
		<file-include source="{BASEDIR}">modification.xsl</file-include>
		<file-include source="{BASEDIR}">package-info.xsl</file-include>
		<file-include source="{BASEDIR}">ptinstall/index.php</file-include>
		
		<!-- Define languages to be included -->
		<!--<language-info>
			<require-file name="Arcade.{LANGUAGE}.php" destination="$languagedir" />
			<require-file name="ArcadeAdmin.{LANGUAGE}.php" destination="$languagedir" />
			<require-file name="ArcadeEmail.{LANGUAGE}.php" destination="$languagedir" />
			<modification format="xml" type="file">{LANGUAGE}.xml</modification>
		</language-info>
		<language name="english" source="{BASEDIR}/language/english" utf8="true" />-->
		<!--<language name="finnish" source="{BASEDIR}/language" utf8="true" encoding="ISO-8859-1" />-->
		<!--<language name="turkish" source="{BASEDIR}/language" utf8="true" encoding="ISO-8859-9" />-->
		
		<!-- Replaces -->
		<replaces filename="*.xml" from="{version}" to="{VERSION_INT}" />
		<replaces filename="readme.txt" from="{version}" to="{VERSION}" />
		<replaces filename="Sources/Subs-Project.php" from="$project_version = '0.4.1';" to="$project_version = '{VERSION}';" />
		
		<!-- Define outputs -->
		<output type="zip">{NAME}_{VERSION}</output>
	</build>
</builds>